<% layout("layout") -%>


<div class="jumbotron" id="navbar-gap">
	<div class="container">
		<h1 class="text-center">Find your favourite Product</h1>
		<p class="text-center">Search for Ecommerce Product</p>
		<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="input-group col-md-12">
				<span class="input-group-btn">
					<input type="text" id="search" class="form-control input-lg" name="search_term" placeholder="Search for a Product....">
					<button class="btn btn-default btn-lg"><i class="glyphicon glyphicon-search"></i></button>
					</span>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="container">
	<div id="searchResults" class="row">
	<% products.forEach(function(product){ %>
		<div class="col-md-4">
			<a href="/product/<%= product._id %>">
			<div class="thumbnail">
				<img src="<%= product.image %>">
				<div class="caption">
					<h3><%= product.name %></h3>
					<p><%= product.category.name %></p>
					<p>$<%= product.price %></p>
				</div>
			</div>
			</a>
		</div>
		<% }); %>

		<ul class="pagination text-center">
			<li>
				<% for(var i = 1; i <= pages; i++){ %>
					<% if(i===1){ %>
						<li><a href="/"><%= i %></a></li>
					<% } else{ %>
						<li><a href="/page/<%= i %>"><%= i %></a></li>
					<% } %>
				<% } %>
			</li>
		</ul>
	</div>
</div>