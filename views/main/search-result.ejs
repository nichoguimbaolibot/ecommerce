<% layout("layout") -%>
<div class="container">

<% if(data.length === 0){ %>
<div class="col-md-4"></div>
<div class="col-md-4">
	<h3>Search not found</h3>
</div>
<div class="col-md-4"></div>
<% } else{ %>
	<h3>Results for <%= query %></h3>
	<div class="row">
	<% data.forEach(function(product){ %>
		<div class="col-md-4">
			<a href="/product/<%= product._source._id %>">
			<div class="thumbnail">
				<img src="<%= product._source.image %>">
				<div class="caption">
					<%= product._source.category %>
					<h3><%= product._source.name %></h3>
					<p><%= product._source.category.name %></p>
					<p>$<%= product._source.price %></p>
				</div>
			</div>
			</a>
		</div>
		<% }); %>
	</div>	
<% } %>
</div>